<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wbximy.crawler.mapping.BasketballMatchStatMapper">

    <sql id="cols">
        id, seller_id, item_id, item_name, price, img_head, add_time, update_time, status, stock, edit_time, sold,
        is_soldout, off_shelf_time, flag, flag_bin, extend1, extend2
    </sql>

    
    <!-- 
    	/* 根据matchId获取一条记录 */
	MatchStat select(@Param("matchId")int matchId);
	
	/* 插入一条记录 */
	int insert(MatchStat match);
	-->
	
	<select id="select" resultType="MatchStat" >
        SELECT <include refid="cols"/>  FROM match_stat
        <where>
        	match_id = #{matchId}
    	</where>
    </select>
    
    <insert id="insert" parameterType="MatchStat" >
    	INSERT INTO match_stat(<include refid="cols"/>) VALUES(#{})
    </insert>
</mapper>